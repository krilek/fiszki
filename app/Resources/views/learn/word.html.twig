{% extends 'base.html.twig' %}
{% form_theme form 'form/transparent.html.twig' %}
{% block stylesheets %} {{ parent() }}
<style>
  .form-group{
    margin-bottom: 0px;
  }
  .input-transparent{
    text-align: center;
    display: block;
font-size: 2.5rem;
line-height: 1.5;
    background: 0;
background-clip: padding-box;
    border: 0;
    border-color: white;
    border-bottom: 2px solid #fff;
    color: white;
    padding: 0;
    width: 100%;
  }
</style>
{% endblock %} {% block navbar %} {% endblock %} {% block body %}
<div class="row">
  <div id="main" class="d-block mx-auto align-items-center">
    <div class="card text-white border-dark">
        <div class="row">
          <div class="col-lg-12">
            <h1>How is '{{ sWord }}' in {% if lang == 'pl'%}
            english
            {% elseif lang == 'en' %}
            polish
          {% endif %}? </h1>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
          {{ form_start(form) }}
          {% if form.wordEn is defined %}
              {{ form_row(form.wordEn) }}
          {% endif %}
          {% if form.wordPl is defined %}
              {{ form_row(form.wordPl) }}
          {% endif %}
          {{ form_end(form) }}
          </div>
          <h2>{{ goodWords }}</h2>
        </div>
    </div>
  </div>
</div>
{{ dump() }} {% endblock %}